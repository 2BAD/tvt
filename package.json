{
  "name": "@2bad/tvt",
  "version": "2.0.0",
  "description": "",
  "keywords": ["tvt", "ipc", "cctv"],
  "homepage": "https://github.com/2BAD/tvt#readme",
  "bugs": {
    "url": "https://github.com/2BAD/tvt/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2BAD/tvt.git"
